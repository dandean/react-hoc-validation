{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "camelcase": 0,
    "curly": [2, "multi-line"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "max-len": [1, 120],
    "max-nested-callbacks": [2, 3],
    "no-nested-ternary": 1,
    "no-underscore-dangle": 0,
    "no-undef": 2,
    "no-unused-vars": [2, {"vars": "all", "args": "none"}],
    "quotes": [1, "single"],
    "react/jsx-uses-react": 1,
    "strict": 0,
    "vars-on-top": 2
  }
}